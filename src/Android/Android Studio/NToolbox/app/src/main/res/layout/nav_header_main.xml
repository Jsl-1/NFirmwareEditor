<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <ImageView
        android:src="@drawable/arctic_fox_logo"
        android:layout_width="64dp"
        android:layout_height="128dp"
        android:id="@+id/header_logo"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:background="?attr/colorControlHighlight" />
    <TextView
        android:text="[Device Name]"
        android:id="@+id/header_devicename"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/header_logo"
        android:padding="5dp"
        android:paddingTop="30dp" />
    <TextView
        android:text="FW Ver:"
        android:id="@+id/header_fw_ver_label"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:background="?attr/colorControlHighlight"
        android:layout_below="@id/header_devicename"
        android:layout_toRightOf="@id/header_logo"
        android:padding="5dp" />
    <TextView
        android:text="[FW Ver]"
        android:id="@+id/header_fw_ver"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="?attr/colorControlHighlight"
        android:layout_below="@id/header_devicename"
        android:layout_toRightOf="@id/header_fw_ver_label"
        android:padding="5dp" />
    <TextView
        android:text="Build:"
        android:id="@+id/header_build_label"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:background="?attr/colorControlHighlight"
        android:layout_below="@id/header_fw_ver_label"
        android:layout_toRightOf="@id/header_logo"
        android:padding="5dp" />
    <TextView
        android:text="[Build]"
        android:id="@+id/header_build"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="?attr/colorControlHighlight"
        android:layout_below="@id/header_fw_ver"
        android:layout_toRightOf="@id/header_build_label"
        android:padding="5dp" />
    <TextView
        android:text="HW Ver:"
        android:id="@+id/header_hw_ver_label"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:background="?attr/colorControlHighlight"
        android:layout_below="@id/header_build_label"
        android:layout_toRightOf="@id/header_logo"
        android:padding="5dp" />
    <TextView
        android:text="[HW Ver]"
        android:id="@+id/header_hw_ver"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="?attr/colorControlHighlight"
        android:layout_below="@id/header_build"
        android:layout_toRightOf="@id/header_hw_ver_label"
        android:padding="5dp" />
</RelativeLayout>